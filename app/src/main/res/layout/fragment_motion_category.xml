<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".motion.MotionCategoryFragment">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/simple_motion_category_card_view"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_margin="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/third_gradient_bg"
                android:fontFamily="@font/pacifico"
                android:padding="24dp"
                android:text="@string/simple_motion_text"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Headline4"
                android:textColor="?attr/colorOnSecondary" />

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/list_motion_category_card_view"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_margin="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/simple_motion_category_card_view">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/fourth_gradient_bg"
                android:fontFamily="@font/pacifico"
                android:padding="24dp"
                android:text="@string/list_motion_text"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Headline4"
                android:textColor="?attr/colorOnSecondary" />

        </com.google.android.material.card.MaterialCardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>